@model MusicStoreAppTwo.Models.Album

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Album</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AlbumArtUrl)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AlbumArtUrl)
        </dd>
        <dd class="col-sm-2">
            <h5>@Html.DisplayNameFor(model => model.Artist.Name)</h5>
        </dd>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Artist.Name)
        </dd>
        <h5>Songs:</h5>
        @foreach(var item in Model.SongAlbums)
        {
            <dd class="col-sm-10">
                @Html.Name(item.Song.Name)
            </dd>
        }
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.AlbumId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
